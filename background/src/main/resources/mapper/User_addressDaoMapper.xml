<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ka.store.dao.User_addressDao">
    <insert id="insertAddress" parameterType="com.ka.store.pojo.user.User_address">
        insert into user_address(user_id,address,user_name,tag,user_address_id,phone)
            values(#{user_id},#{address},#{user_name},#{tag},#{user_address_id},#{phone})
    </insert>

    <select id="selectAddressByUser" resultType="com.ka.store.pojo.user.User_address" parameterType="String">
        select * from user_address where user_id=#{user_id}
    </select>

    <delete id="deleteAddress" parameterType="Integer">
        delete from user_address where id=#{id}
    </delete>

    <update id="updateAddress" parameterType="com.ka.store.pojo.user.User_address">
        update user_address
        <set>
            <if test="user_id!=null and user_id!=''">
                user_id=#{user_id}
            </if>
            <if test="address!=null and address!=''">
                ,address=#{address}
            </if>
            <if test="user_name!=null and user_name!=''">
                ,user_name=#{user_name}
            </if>
            <if test="tag!=null and tag!=''">
                ,tag=#{tag}
            </if>
            <if test="phone!=null and phone!=''">
                ,phone=#{phone}
            </if>
        </set>
        where id=#{id}
    </update>

</mapper>